<div>Add Teacher</div>
<div class="row">
    <div class="col-6" data-bind="with:newDepartment">
        <div class="form-group mb-3">
            <label for="fullname">Department Name</label>
            <input class="form-control" name="departmentname" data-bind="value:departmentName" required />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" data-bind="click:$root.AddDepartment">Register</button>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>SN.</th>
            <th>Department Name</th>
        </tr>
    </thead>
    <tbody data-bind="foreach:departments">
        <tr>
            <td data-bind="text:$index()+1"></td>
            <td data-bind="text:departmentName"></td>
        </tr>

    </tbody>
</table>
@section Scripts {
    <script src="~/js/knockout.js"></script>
    <script src="~/js/teacher/teacher.model.js"></script>
    <script src="~/js/teacher/teacher.controller.js"></script>
    <script>
        {
                var obj = new TeacherController();
                    ko.applyBindings(obj);
                }
    </script>
}